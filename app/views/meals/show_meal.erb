<h1>Meal details</h1>

<h3><%= @meal.name %></h3>
<p><%= @meal.description %></p>
<p><%= @meal.created_at %></p>

<% if is_restaurant? %>
<form action="/meals/<%= @meal.id %>/delete" method="POST">
  <input type="hidden" name="_method" id="hidden" value="DELETE">
  <input type="submit" value="Delete">
</form>

<p><a href="/meals/<%= @meal.id %>/edit">Edit meal</a></p>
<% end %>
<p><a href="/meals"> Back to all meals</a></p>
